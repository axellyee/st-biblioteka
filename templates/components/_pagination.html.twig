{% if pageCount > 1 %}
<nav>
    <div class="pagination">
        {% if first is defined and current != first %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): first})) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a></li>
            {% else %}
                <li class="page-item disabled"><div class="page-link">{{ page }}</div></li>
            {% endif %}
        {% endfor %}

        {% if last is defined and current != last %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): last})) }}{{ path(route, query|merge({(pageParameterName): last})) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        {% endif %}
    </div>
</nav>
{% endif %}