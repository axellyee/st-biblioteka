{% extends 'layouts/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col"><h3>{{ book.title }}</h3></div>
        <div class="col d-flex">
            {% if book.bookIsRented %}
                <div class="btn btn-info ml-auto disabled" data-toggle="tooltip" data-placement="top" title="Grāmata jir aizņemta!">
                    Rezervēt
                </div>
            {% else %}
                <a href="{{ path('book_rent', {'book': book.id}) }}" class="btn btn-info ml-auto">
                    Rezervēt
                </a>
            {% endif %}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-4">
            <img src="/uploads/{{ book.image }}" class="card-img-top" alt="...">
        </div>
        <div class="col-md-8">
            <h4 class="font-weight-bold text-uppercase">Apraksts</h4>
            <hr>
            <p class="mt-3">
                {{ book.description }}
            </p>
        </div>
    </div>
{% endblock %}